<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/key_line_3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clItemParcel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/key_line_2">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ivEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/key_line_1"
            android:src="@drawable/ic_edit_black_24dp"
            app:layout_constraintBottom_toBottomOf="@id/ivSender"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivSender" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/ParcelItemHeader"
            android:text="Garmin VivoMove HR"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSender"
            style="@style/ParcelItemIcon"
            android:src="@drawable/ic_shopping_cart_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSender"
            style="@style/ParcelItemText"
            android:text="Bol.com"
            app:layout_constraintBottom_toBottomOf="@id/ivSender"
            app:layout_constraintEnd_toStartOf="@id/ivEdit"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/ivSender"
            app:layout_constraintTop_toTopOf="@id/ivSender" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCourier"
            style="@style/ParcelItemIcon"
            android:src="@drawable/ic_shuttle_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSender" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCourier"
            style="@style/ParcelItemText"
            android:text="PostNL"
            app:layout_constraintBottom_toBottomOf="@id/ivCourier"
            app:layout_constraintStart_toEndOf="@id/ivCourier"
            app:layout_constraintTop_toTopOf="@id/ivCourier" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivLastUpdated"
            style="@style/ParcelItemIcon"
            android:src="@drawable/ic_time_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCourier" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLastUpdated"
            style="@style/ParcelItemText"
            android:text="12-04-2019"
            app:layout_constraintBottom_toBottomOf="@id/ivLastUpdated"
            app:layout_constraintStart_toEndOf="@id/ivLastUpdated"
            app:layout_constraintTop_toTopOf="@id/ivLastUpdated" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvStatus"
            style="@style/ParcelItemText"
            android:layout_marginStart="0dp"
            android:text="DELIVERED"
            app:layout_constraintBottom_toBottomOf="@id/ivLastUpdated"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivLastUpdated" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>