<resources>

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
    </style>

    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceMediumComponent</item>
        <item name="android:paddingStart">@dimen/key_line_5</item>
        <item name="android:paddingEnd">@dimen/key_line_5</item>
        <item name="android:paddingBottom">@dimen/key_line_5</item>
        <item name="android:paddingTop">@dimen/key_line_2</item>
    </style>

    <style name="Widget.MyTheme.BottomSheetHeaderStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?textAppearanceHeadline6</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="Widget.MyTheme.BottomSheetRadioButtonStyle" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/key_line_3</item>
        <item name="android:paddingEnd">@dimen/key_line_3</item>
        <item name="android:textAppearance">?textAppearanceSubtitle1</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <!-- Progressbar. -->
    <style name="Widget.MyTheme.Progressbar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:id">@id/progressBar</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:visibility">gone</item>
    </style>

    <item name="progressBar" type="id" />

    <!-- Card View -->
    <style name="Widget.MyTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/key_line_2</item>
        <item name="cardElevation">@dimen/key_line_1</item>
    </style>

    <!-- Parcel Item styles. -->
    <style name="Widget.MyTheme.ParcelItemHeader" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?textAppearanceSubtitle1</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?piColorTitle</item>
    </style>

    <style name="Widget.MyTheme.ParcelItemText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/key_line_2</item>
        <item name="android:layout_marginTop">@dimen/key_line_1</item>
        <item name="android:layout_marginEnd">@dimen/key_line_1</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?piColorOn</item>
    </style>

    <style name="Widget.MyTheme.ParcelItemIcon" parent="">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:tint">?piColorOn</item>
    </style>

    <style name="Widget.MyTheme.ParcelItemActionIcon" parent="Widget.MyTheme.ParcelItemIcon">
        <item name="android:tint">?piColorAction</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- SearchView text and hint color style. -->
    <style name="Widget.MyTheme.Light.AutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">?colorControlNormal</item>
        <item name="android:textColorHint">?colorControlNormal</item>
    </style>

    <!-- Text input box styles. -->
    <style name="Widget.MyTheme.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MyTheme.TextInputEditText.OutlinedBox
        </item>
    </style>

    <style name="ThemeOverlay.MyTheme.TextInputEditText.OutlinedBox" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="editTextStyle">@style/Widget.MyTheme.TextInputEditText.OutlinedBox</item>
    </style>

    <style name="Widget.MyTheme.TextInputEditText.OutlinedBox" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <!-- Drop down input box (material spinner) styles. -->
    <style name="Widget.MyTheme.TextInputLayout.OutlinedBox.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MyTheme.AutoCompleteTextView.OutlinedBox
        </item>
    </style>

    <style name="ThemeOverlay.MyTheme.AutoCompleteTextView.OutlinedBox" parent="ThemeOverlay.MaterialComponents.AutoCompleteTextView.OutlinedBox">
        <item name="autoCompleteTextViewStyle">
            @style/Widget.MyTheme.AutoCompleteTextView.OutlinedBox
        </item>
    </style>

    <style name="Widget.MyTheme.AutoCompleteTextView.OutlinedBox" parent="Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

</resources>
